+
     protected void E() {
         if (this.portalCooldown > 0) {
             --this.portalCooldown;
@@ -472,6 +489,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
         this.fireTicks = 0;
     }
 
+   protected final void doVoidDamage() { this.ae(); } // Paper - OBFHELPER
     protected void ae() {
         this.die();
     }
